{
    "manifest_version": 3,
    "name": "Manhwa tracker",
    "version": "3.0.0",
    "description": "Manhwa Tracker for a few sites",
    "action": {
        "default_title": "Manhwa Tracker",
        "default_popup": "index.html"
    },
    "permissions": [
        "storage"
    ],
    "content_scripts": [{
        "matches": ["<all_urls>"],
        "run_at": "document_start",
        "js": ["src/pages/ContentScript/ContentScript.page.tsx"]
    }]
}
